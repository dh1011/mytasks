{
    "name": "mytasks",
    "private": true,
    "workspaces": [
        "packages/*",
        "mobile",
        "web"
    ],
    "scripts": {
        "test": "npm run test:unit",
        "test:unit": "npm run test:unit --workspace=@mytasks/mobile --if-present",
        "lint": "npm run lint --workspace=@mytasks/mobile --if-present",
        "web:dev": "npm run dev --workspace=web",
        "web:docker:test": "cd web && bash test-docker.sh"
    },
    "overrides": {
        "minimatch": "^10.2.1",
        "tar": "^7.5.8"
    }
}